function fish_greeting
  set -f normal (set_color normal)
  set -l cyan (set_color -o cyan)
  set -l green (set_color -o green)
  set -f h (date +%H)
  set -f date (date +%d/%m/%Y)
  if [ $h -lt 12 ]
    set -f wellcome 'Good Morning!'
  else if [ $h -lt 18 ]
    set -f wellcome 'Good Affternoon!'
  else if [ $h -lt 21 ]
    set -f wellcome 'Good Evening!'
  else
    set -f wellcome 'Good Night!'
  end
  echo $cyan$wellcome$normal Today is date $green$date
end
